apiVersion: v1
kind: Pod
metadata:
  name: calico-policy-agent
  namespace: calico-system
  labels:
    version: latest
    projectcalico.org/app: "policy-agent"
spec:
  hostNetwork: true
  containers:
    - name: policyagent
      image: calico/k8s-policy-agent:v0.1.3
      env:
      - name: ETCD_AUTHORITY
        value: "127.0.0.1:6666"
      - name: K8S_API
        value: "http://127.0.0.1:8080"
      - name: LOG_LEVEL
        value: "info"